<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_alignEnd">@+id/btnAppMaterial</item>
        <item name="android:layout_alignLeft">@+id/btnAppMaterial</item>
        <item name="android:layout_alignStart">@+id/btnAppMaterial</item>
        <item name="android:layout_alignRight">@+id/btnAppMaterial</item>
    </style>



</resources>
